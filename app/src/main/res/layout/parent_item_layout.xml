<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="100dip"
    android:padding="20dp"
    android:background="@color/colorWhite" android:layout_marginBottom="20dp">

    <TextView android:id="@+id/category_tv" android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="match_parent" android:paddingLeft="35sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold" />

    <ImageView
        android:src="@drawable/ic_down"
        android:layout_gravity="center"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"/>

</LinearLayout>